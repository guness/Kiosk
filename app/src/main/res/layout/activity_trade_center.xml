<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".pages.TradeCenterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_heightPercent="36%">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="29" />

        <ImageView
            android:id="@+id/trade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="44"
            android:adjustViewBounds="true"
            android:contentDescription="@string/trade"
            app:srcCompat="@drawable/trade" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="34" />

        <ImageView
            android:id="@+id/news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="44"
            android:adjustViewBounds="true"
            android:contentDescription="@string/news"
            app:srcCompat="@drawable/news" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="34" />

        <ImageView
            android:id="@+id/bonus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="44"
            android:adjustViewBounds="true"
            android:contentDescription="@string/bonus"
            app:srcCompat="@drawable/bonus" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="34" />

        <ImageView
            android:id="@+id/ranglist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="44"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ranglist"
            app:srcCompat="@drawable/ranglist" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="29" />
    </LinearLayout>

    <ImageView
        android:id="@+id/faq"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/faq"
        app:layout_marginBottomPercent="6%"
        app:layout_marginStartPercent="5%"
        app:layout_widthPercent="9%"
        app:srcCompat="@drawable/faq" />

</android.support.percent.PercentRelativeLayout>
